{{ header }}
<div id="checkout-cart" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  {% if attention %}
  <div class="alert alert-info alert-dismissible fade show" role="alert">
    {{ attention }}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  {% endif %}
  {% if success %}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    {{ success }}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  {% endif %}
  {% if error_warning %}
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{ error_warning }}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  {% endif %}
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
      {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
      {% set class = 'col-sm-9' %}
    {% else %}
      {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">
      {{ content_top }}
      <form action="{{ action }}" method="post" enctype="multipart/form-data" id="cartForm" name="cartForm">
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr>
                <td class="text-center">{{ column_image }}</td>
                <td class="text-center">{{ column_price }}</td>
                <td class="text-center">{{ column_quantity }}</td>
                <td class="text-center">{{ column_total }}</td>
                <td></td>
              </tr>
            </thead>
            <tbody>
            {% for product in products %}
              <tr>
                <td class="text-center">
                  <div class="cart-product">
                    <div class="cart-product-image">
                      {% if product.thumb %} 
                        <a href="{{ product.href }}">
                          <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-thumbnail" />
                        </a> 
                      {% endif %}
                    </div>
                    <div class="cart-product-info">
                      <span><a href="{{ product.href }}">{{ product.name }}</a> {% if not product.stock %} <span class="text-danger">***</span> {% endif %}</span>
                      <span class="product-model">Артикул:&nbsp;{{ product.model }}</span>
                    </div>
                  </div>
                </td>
                <td class="text-center">{{ product.price }}</td>
                <td class="text-center">
                  <div class="input-group btn-block" style="max-width: 200px;">
                    <div class="input-number w-100">
                          <button type="button" class="input-down" onclick="inputDown($(this));document.cartForm.submit()">-</button>
                          <input type="text" name="quantity[{{ product.cart_id }}]" value="{{ product.quantity }}" id="input-quantity" size="1" class="form-control" />
                          <button type="button" class="input-up" onclick="inputUp($(this));document.cartForm.submit()">+</button>
                        </div>
                  </div>
                </td>
                <td class="text-center">{{ product.total }}</td>
                <td class="text-center">
                  <button type="button" data-toggle="tooltip" title="{{ button_remove }}" onclick="cart.remove('{{ product.cart_id }}');" class="cart-remove">
                    <img src="/catalog/view/theme/default/image/checkout/delete.svg" alt="" />
                  </button>
                </td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
          <div class="cart-tools">
            <div class="buttons">
              <a href="{{ checkout }}" class="btn btn-primary">{{ button_checkout }}</a>
              <a href="{{ continue }}" class="btn btn-default">{{ button_shopping }}</a>
            </div>
            <div class="totals">
                {% for total in totals %}
                  <div class="total">
                    <span>{{ total.title }}:</span>
                    <span class="total-price">{{ total.text }}</span>
                  </div>
                {% endfor %}
            </div>
          </div>
        </div>
      </form>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }} 