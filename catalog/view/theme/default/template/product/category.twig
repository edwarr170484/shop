{{ header }}
<div id="product-category" class="container">
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-12 col-md-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
      {{ content_top }}
      <h2 class="category-header">{{ heading_title }}</h2>
      {% if categories | length > 0 %}
        {% for category in categories %}
          {% if category.products | length > 0 %}
            <div class="subcategory-products">
              <div class="subcategory-header">
                <h2>{{ category.name }}</h2>
                <a href="{{ category.href }}">Все</a>
              </div>
              <div class="subcategory-products">
                <div class="product-grid">
                  {% for product in category['products'] %}
                    <div class="product-layout">
                      <div class="product-layout-inner">
                        <div class="image"><a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-fluid" /></a></div>
                        <div class="caption">
                          <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
                          {% if product.price %}
                          <p class="price">
                            {% if not product.special %}
                              {{ product.price }}
                            {% else %}
                              {{ product.special }}
                            {% endif %}
                          </p>
                          {% endif %}
                        </div>
                      </div>
                    </div>
                  {% endfor %}
                </div>
              </div>
            </div>
          {% else %}
            <div class="subcategory-products">
              <div class="subcategory-header">
                <h2>{{ category.name }}</h2>
              </div>
              <div class="subcategory-products">
                <p>{{ text_empty }}</p>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      {% else %}
        {% if products %}
          <div class="row">
            <div class="col-12">
              <div class="category-sorts">
                <label class="input-group-addon" for="input-sort">{{ text_sort }}</label>
                <label class="category-name">{{ heading_title }}</label>
                <ul class="nav sort-links">
                  {% for sorts in sorts %}
                    <li><a href="{{ sorts.href }}">{{ sorts.text }}</a><li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          </div>
          <div class="row"> 
            <div class="col-12">
              <div class="product-grid">
                {% for product in products %}
                  <div class="product-layout">
                    <div class="product-layout-inner">
                      <div class="image"><a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-fluid" /></a></div>
                      <div class="caption">
                        <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
                        {% if product.price %}
                        <p class="price">
                          {% if not product.special %}
                            {{ product.price }}
                          {% else %}
                            {{ product.special }}
                          {% endif %}
                        </p>
                        {% endif %}
                      </div>
                    </div>
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12">{{ pagination }}</div>
          </div>
        {% endif %}
        {% if not categories and not products %}
          <p>{{ text_empty }}</p>
          <div class="buttons d-flex justify-content-end">
            <a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a>
          </div>
        {% endif %}
      {% endif %}

      
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }} 
