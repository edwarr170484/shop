<div class="bm-posts">
    <div class="bm-grid bm-grid">
        <div class="row">
            {% for post in posts %}
                    {% if post.row %}
                        </div><div class="row">
                    {% endif %}
                    <div class="bm-grid-item col-sm-{{post.col}}" {% if post.animate %}animate="{{post.animate}}"{% endif %}>
                        <div class="bm-grid-item-body animated">
                            {% include '/default/template/extension/d_blog_module/post_thumb.twig' with post %}
                        </div>
                    </div>
            {% endfor %}
        </div>
    </div>
</div>