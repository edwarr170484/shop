{{ header }}
<div id="blog-blog" class="container">
    <div class="row">
        <aside id="column-left" class="col-12 col-md-3 blog-navigation">
            {{ menu }}
        </aside>
        <div id="content" class="col-12 col-md-9">
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
            <div class="row">
                <div class="col-12">
                    <h1>{{ heading_title }}</h1>
                </div>
            </div>
            <div class="bm row">
                {% if categories | length > 0 %}
                    {% for category in categories %}
                        {% if category.posts %}
                            <div class="col-12">
                                <div class="blog-category">
                                    <div class="blog-category-title">
                                        <h2>{{ category.title }}</h2>
                                        <a href="{{ category.href }}">{{ show_all_text }}</a>
                                    </div>
                                    <div class="blog-category-posts">
                                        <div class="row">
                                            {% for post in category.posts %}
                                                <div class="col-12 col-sm-6 col-md-4">
                                                    <div class="post-thumb">
                                                        <div class="image">
                                                            <a href="{{ post.post.href }}">
                                                                <img src="{{ post.post.thumb }}" alt="" title="" class="img-fluid" />
                                                            </a>
                                                        </div>
                                                        <div class="post-info">
                                                            <h3><a href="{{post.post.href}}">{{post.post.title}}</a></h3>
                                                            <div class="short-description">{{post.post.short_description}}</div>
                                                            <div class="details-link"><a href="{{ post.post.href }}">{{ post_details_text }}</a></div>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                {% else %}
                    <p class="bm-empty">{{text_empty}}</p>
                {% endif %}
            </div>  
        </div>
        {{ column_right }}
    </div>
    <div class="row">{{content_bottom}}</div>
</div>
<a class="bck" href="#"></a>
{{ footer }} 