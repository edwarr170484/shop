<div class="modal fade" id="kp-request" tabindex="-1" aria-labelledby="kp-request" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form type="POST" action="" onsubmit="return kpRequest()" id="kp-request-form">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Запросить КП</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="form-group">
              <input name="name" type="text" placeholder="Ваше имя" class="form-control" required />
            </div>
            <div class="form-group">
              <input name="phone" type="text" placeholder="Ваш номер телефона" class="form-control" required />
            </div>
            <div class="form-group">
              <input name="email" type="text" placeholder="Ваш e-mail" class="form-control" required />
              <div class="control-message"></div>
            </div>
            <div class="form-group">
              <textarea name="message" placeholder="Сообщение" class="form-control"></textarea>
              <div class="control-message"></div>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-bs-dismiss="modal">Закрыть</button>
          <button type="submit" class="btn btn-primary">Отправить</button>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="modal fade" id="delivery-data" tabindex="-1" aria-labelledby="delivery-data" aria-hidden="true">
